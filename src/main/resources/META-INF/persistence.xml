<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="chess" transaction-type="RESOURCE_LOCAL">
		<class>com.cloudbees.model.Board</class>
		<class>com.cloudbees.model.Game</class>
		<class>com.cloudbees.model.Move</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:cloudbees://mp_chess"/>
			<property name="javax.persistence.jdbc.user" value="queenbee"/>
			<property name="javax.persistence.jdbc.password" value="welcome1"/>
			<property name="javax.persistence.jdbc.driver" value="com.cloudbees.jdbc.Driver"/>		
			<property name="eclipselink.logging.file" value="eclipselink.log"/>
			<property name="eclipselink.logging.level" value="FINEST"/>
		</properties>
	</persistence-unit>
</persistence>
